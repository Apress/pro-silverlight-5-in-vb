<UserControl x:Class="Media.MediaCommands"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" MediaCommand="media_MediaCommand">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <MediaElement x:Name="media" Source="OldSpice.mp4" Stretch="Uniform" AutoPlay="False"></MediaElement>
        <Button Grid.Row="1" Padding="5" Margin="5" Width="150" Click="cmdFullScreen_Click">Toggle Full Screen</Button>
    </Grid>
</UserControl>
