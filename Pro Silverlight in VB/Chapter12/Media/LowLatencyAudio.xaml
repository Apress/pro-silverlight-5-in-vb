<UserControl x:Class="Media.LowLatencyAudio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <StackPanel>
            <Button Click="cmdPlaySound_Click" Margin="3">Play Sound</Button>
            <Button Click="cmdPlayModifiedSound_Click" Margin="3">Play Modified Sound</Button>
            <Button Click="cmdPlayMultipleSounds_Click" Margin="3">Play Multiple Sounds</Button>
            <Button Click="cmdPlayStaggeredSounds_Click" Margin="3">Play Staggered Sounds</Button>
            <Button Click="cmdStartLoop_Click" Margin="3">Start Loop</Button>
            <Button Click="cmdStopLoop_Click" Margin="3">Stop Loop</Button>
        </StackPanel>
    </Grid>
</UserControl>
