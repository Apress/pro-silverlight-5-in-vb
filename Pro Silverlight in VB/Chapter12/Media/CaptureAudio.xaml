<UserControl x:Class="Media.CaptureAudio"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel Margin="10">
        <Button x:Name="cmdStartRecord" Margin="3" Padding="5" Click="cmdStartRecord_Click" Content="Record Clip"></Button>
        <Button x:Name="cmdStopRecord" Margin="3" Padding="5" Click="cmdStopRecord_Click" Content="Stop Recording Clip" IsEnabled="False"></Button>
        <Button x:Name="cmdPlayClip" Margin="3" Padding="5" Click="cmdPlayClip_Click" Content="Play Clip" IsEnabled="False"></Button>
        <TextBlock x:Name="lblStatus" Margin="3"></TextBlock>
        <MediaElement x:Name="media"></MediaElement>
    </StackPanel>
</UserControl>
