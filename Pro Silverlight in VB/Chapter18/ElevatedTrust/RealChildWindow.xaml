<UserControl x:Class="ElevatedTrust.RealChildWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel Width="200" HorizontalAlignment="Left" Margin="10">
        <Button x:Name="cmdCreateBasic" Margin="2" Content="Create a Basic Child Window" Click="cmdCreateBasic_Click"></Button>
        <Button x:Name="cmdCreateFancy" Margin="2" Content="Create a Fancy Child Window" Click="cmdCreateFancy_Click"></Button>
        <Button x:Name="cmdClose" Margin="2" Content="Close Windows" Click="cmdClose_Click"></Button>
    </StackPanel>
</UserControl>
