<navigation:Page x:Class="Navigation.CustomCachedPage" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="CustomCachedPage">
    <StackPanel x:Name="LayoutRoot" Background="White">
        <TextBlock TextWrapping="Wrap">This is the unremarkable content in
CustomCachedPage.xaml. The first text box is preserved, but the second is not.</TextBlock>
        <TextBox Margin="3" x:Name="txtCached"></TextBox>
        <TextBox Margin="3"></TextBox>
    </StackPanel>
</navigation:Page>
