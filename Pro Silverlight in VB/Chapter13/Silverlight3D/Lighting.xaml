<UserControl x:Class="Silverlight3D.Lighting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <DrawingSurface x:Name="drawingSurface" Width="400" Height="300" Draw="drawingSurface_Draw"></DrawingSurface>
        <Slider x:Name="slider" Grid.Row="1" Margin="10" Width="400" ValueChanged="slider_ValueChanged" Minimum="0" Maximum="100"></Slider>
    </Grid>
</UserControl>
