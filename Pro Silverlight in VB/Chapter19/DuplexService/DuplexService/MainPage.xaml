<UserControl x:Class="DuplexService.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">

    <StackPanel Margin="5">
        <TextBlock Margin="5,0">Enter the text you want to process asynchronously:</TextBlock>
        <TextBox x:Name="txtTextToProcess" Margin="5,0" Text="Sample Text"></TextBox>
        <Button Margin="5" Content="Submit" Click="cmdSubmit_Click"></Button>
        <TextBlock x:Name="lblStatus" Margin="5"></TextBlock>
    </StackPanel>

</UserControl>